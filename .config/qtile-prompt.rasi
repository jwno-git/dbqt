configuration {
    display-combi: "Prompt:";
}

* {
    background-color: transparent;
    text-color: #67608B;
    font: "sans 14";
}

window {
    location: north;
    anchor: north;
    x-offset: 900;
    y-offset: 3;
    width: 400px;
    height: 72px;
    background-color: transparent;
    border: 0;
}

mainbox {
    background-color: transparent;
    children: [inputbar, listview];
}

inputbar {
    background-color: transparent;
    children: [prompt, entry];
    spacing: 5px;
    padding: 0 10px;
}

prompt {
    text-color: #67608B;
    background-color: transparent;
}

entry {
    text-color: #666666;
    background-color: transparent;
}

listview {
    background-color: transparent;
    text-color: #666666;
    lines: 1;
    scrollbar: false;
    border: 0;
    padding: 2px;
}

element {
    background-color: transparent;
    padding: 2px;
}

element-text {
    background-color: inherit;
    text-color: #666666;
}

element-text selected {
    background-color: inherit;
    text-color: #444444;
}

element-icon {
    background-color: inherit;
}
